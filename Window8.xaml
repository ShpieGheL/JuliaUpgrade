<Window x:Class="JuliaUpgrade.Window8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliaUpgrade"
        mc:Ignorable="d"
        Title="Изменить запись" Height="300" Width="600" ResizeMode="NoResize">
    <Grid Name="G">
        <Label FontSize="20" Margin="0,0,520,220" Content="Дата:"/>
        <DatePicker Name="D1" FontSize="20" Margin="130,0,300,220"/>
        <Label FontSize="20" Margin="0,50,470,170" Content="Описание:"/>
        <TextBox Name="T1" FontSize="20" Margin="130,50,10,170"/>
        <Label FontSize="20" Margin="0,100,470,120" Content="Зароботок:"/>
        <TextBox Name="T2" FontSize="20" Margin="130,100,300,120"/>
        <Label FontSize="20" Margin="0,150,470,70" Content="Траты:"/>
        <TextBox Name="T3" FontSize="20" Margin="130,150,300,70"/>
        <Button Content="Изменить" FontSize="20" Margin="10,200,10,10" Click="Button_Click"/>
    </Grid>
</Window>
