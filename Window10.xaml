<Window x:Class="JuliaUpgrade.Window10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliaUpgrade"
        mc:Ignorable="d"
        Title="Изменить налог" Height="230" Width="600" ResizeMode="NoResize">
    <Grid Name="G">
        <Label FontSize="20" Content="Описание:" Margin="0,0,470,150"/>
        <TextBox Name="T1" FontSize="20" Margin="130,0,10,150"/>
        <Label FontSize="20" Content="Тип:" Margin="0,50,470,100"/>
        <ComboBox Name="C1" FontSize="20" Margin="130,50,10,100" IsEditable="False">
            <ComboBoxItem Content="Процентный"/>
            <ComboBoxItem Content="Фиксированный"/>
        </ComboBox>
        <Label FontSize="20" Content="Плата:" Margin="0,100,470,50"/>
        <TextBox Name="T2" FontSize="20" Margin="130,100,10,50"/>
        <Button FontSize="20" Content="Изменить" Margin="0,150,0,0" Click="Button_Click"/>
    </Grid>
</Window>
